{
  "kind": "collectionType",
  "collectionName": "customers",
  "info": {
    "name": "Customer",
    "description": ""
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string"
    },
    "businessName": {
      "type": "string"
    },
    "avatar": {
      "model": "file",
      "via": "related",
      "allowedTypes": [
        "images"
      ],
      "plugin": "upload",
      "required": false,
      "pluginOptions": {}
    },
    "address": {
      "type": "text"
    },
    "taxRegistrationNumber": {
      "type": "string",
      "regex": "\\d{4}-\\d{4}-\\d{6}"
    },
    "type": {
      "type": "enumeration",
      "enum": [
        "Agency",
        "Brand"
      ]
    },
    "contacts": {
      "type": "component",
      "repeatable": true,
      "component": "customers.contact"
    },
    "notes": {
      "type": "component",
      "repeatable": true,
      "component": "customers.notes"
    },
    "quotations": {
      "collection": "quotation",
      "via": "customer"
    },
    "contracts": {
      "via": "customer",
      "collection": "contract"
    },
    "brands": {
      "collection": "customer"
    },
    "managed_by": {
      "via": "customers",
      "plugin": "users-permissions",
      "model": "user"
    }
  }
}
